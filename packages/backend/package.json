{
	"name": "todo-api",
	"version": "1.0.0",
	"scripts": {
		"build": "rimraf build && npx tsc",
		"prestart": "npm run prisma:migrate && npm run prisma:generate && npm run build",
		"start": "concurrently \"tsc -w\" \"tsc-alias -w\" \"node dist/app.js\"",
		"prisma:generate": "npx prisma generate",
		"prisma:migrate": "npx prisma migrate dev",
		"preserve": "npm run build",
		"serve": "concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon dist/app.js\" ",
		"lint": "npx eslint ./src",
		"lint:fix": "npx eslint ./src --fix",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^5.16.1",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.4.1",
		"express": "^4.18.2",
		"express-flash": "^0.0.2",
		"express-session": "^1.18.0",
		"joi": "^17.13.1",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.9.13",
		"nodemon": "^3.0.3",
		"passport": "^0.4.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"password": "^0.1.1",
		"prisma": "^5.0.0",
		"rimraf": "^5.0.5",
		"tsconfig-paths": "^4.2.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^20.11.16",
		"@types/nodemailer": "^6.4.15",
		"@types/passport": "^1.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"concurrently": "^8.2.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.10",
		"prettier": "^3.2.5",
		"prisma": "^5.16.1",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.8",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
